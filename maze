import turtle

window = turtle.Screen()
window.bgcolor("pink")
window.title("Mazerunner")
window.setup(1050,1050)

class Cell(turtle.Turtle):
  def __init__(self):
    turtle.Turtle.__init__(self)
    self.shape("circle")
    self.color("white")
    self.penup()
    self.speed(0)
    
class Piece(turtle.Turtle):
  def __init__(self):
    turtle.Turtle.__init__(self)
    self.shape("circle")
    self.color("purple")
    self.penup()
    self.speed(0)
    
  def go_up(self):
    self.goto(self.xcor(), self.ycor() + 25)
    
  def go_down(self):
    self.goto(self.xcor(), self.ycor() - 25)
    
  def go_left(self):
    self.goto(self.xcor() - 25, self.ycor())
    
  def go_right(self):
    self.goto(self.xcor() + 25, self.ycor())

