def setup_maze(level):
  for y in range(len(level)):
    for x in range(len(level[y])):
      character = level[y][x]
      screen_x = (-358 + (x * 25))
      screen_y = (358 - (y * 25))
      
      if character == "X":
        cell.goto(screen_x, screen_y)
        cell.stamp()
        
        wall.append((screen_x,screen_y))
        
      if character == "L":
        piece.goto(screen_x, screen_y)
        
cell = Cell()
piece = Piece()

wall = []
print(walls)
